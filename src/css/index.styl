$main_dark=#000
$main_lite=#fff
$main_highlite=#FBD784
$main_buttons=#FFA343
$main_shift = 4.7rem;


html,
body{
    font:18px/1.7 'Open Sans', sans-serif;
    background: $main_dark url("../images/cover.jpg") no-repeat center top;
    background-size: 100% auto;
    color: $main_lite;
}
.container{
        padding: 0 $main_shift $main_shift;
        max-width: 1460px;
        margin: 0 auto;
    }
a{
    color:$main_highlite;
    transition: opacity 0.3s;
    opacity:1;
    &:visited{
        color: darken($main_highlite,30);
        
    }
    &:hover,
    &:active{
        opacity:0.7;
    }
}
.cover-space{
    padding-bottom: 82%;
}
.header{
    position: absolute;
    top:2rem;
    width:100%;
    &__inner{
            display: grid;
            grid-template-columns: auto 1fr auto;
            align-items: center;
            padding:0 $main_shift;
    }
    &__center{
        display: flex;
        justify-content: center;
        }

}
.logo{
    color:$main_lite;
    letter-spacing: 1%;
    &:visited{
        color: $main_lite}
    &__title{
        font-size: 1.3rem;
        font-weight 700;
    }
}
.main-nav{
    &__list{
        display: flex
    }
    &__link{
        color:$main_lite;
        padding: 1.8rem 1.38rem;
        display: inline-block;
        &:visited{
            color:$main_lite;
        }
    }

}
.search{
    display: flex;
    align-items: center;
    justify-content: center;
    &__icon{
        width:1rem;
        height:1rem;
        background: url(../images/icons/search.svg) no-repeat center center;
        background-size:content;
        cursor: poiner;
        padding-right:0.5rem;

    }
    &__form{
        background:none;
        border:none;
        width:3.4rem;
        font:0.9rem/1 "Open-Sans",sans-serif;
        transition: width 0.3s;
        padding:0.2rem 0.5rem;
        border-radius: 5px;
        
        &::placeholder{
            color:white;
            opacity:1;}

        &:focus{
            border:none;
            outline:none;
            width:10rem;
            background:white;
            &::placeholder{
                color:$main_dark;
                opacity 1;
                }
            }
        }
} 

.main-title{
     font-size: 1rem;
     margin-bottom: 6.2em;
     &__text{
        font-size: 5.4em;
        font-weight: 700;
        line-height: 1.1;
        &--regular{
            display: block;
            font-size: 0.9em;
            font-weight: 400;
            }
         }
     &__summary {
        color: $main_highlite;
        text-transform: uppercase;
        letter-spacing: .36em;
        display: flex;
        align-items: center;
        margin-bottom: 1.5em;

        &::before {
            content: '';
            display: block;
            width: 4em;
            height: 2px;
            margin-right: 1.5em;
            background: $main_highlite;
        }
    }
}
.main-title_small {
    font-size: 1rem;
    margin-bottom: 1.8em;

    .main-title__text {
        font-size: 3.4em;
        line-height: 1.4;
    }
}

    
.discover{
    display: flex;
    align-items: center;
    flex-direction: column;
    position: absolute;
    left:$main_shift;
    right:$main_shift;
    top:14vw;
        
}
.section-cols {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.social-networks{
    position: absolute;
    right:0;
    top:4rem;
    &__title{
        writing-mode: vertical-rl;
        }
    &__item{
        margin-bottom 1rem;
        &:first-child{
            margin-top:1rem;}
        }
    &__link{
        opacity:1;
        transition: opacity 0.3s;
        &:hover{
            opacity:0.7;
            }
        }
}
.scroll-down  {
    display: flex;
    cursor: pointer;
    opacity: 1;
    transition: 0.3s;
    
    &:hover {
        opacity: 0.7;
    }

    &__icon {
        margin: 0.2em 0 0 0.5em;
    }
}


.section-col {
    &:first-child {
        width: 40%;
    }

    &:last-child {
        width: 44%;
    }

    &__image {
        width: 100%;
    }
}

.arrow-link {
    text-decoration: none;
    display: flex;
    align-items: center;

    &__icon {
        margin: 0.2em 0 0 0.4em;
    }

    &_centered {
        justify-content: center;
    }
}

